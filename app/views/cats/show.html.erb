<h2><%= @cat.name %></h2>

<ul>
  <% @cat.attributes.each do |attr| %>
    <% unless ["created_at","updated_at"].include?(attr[0])%>
      <%= "#{attr[0].capitalize}: #{attr[1]}" %>
      <%= "(Age: #{@cat.age})" if attr[0] == "birth_date" %>
      <br>
    <% end %>
  <% end %>
</ul>

<%= link_to "Edit this cat", edit_cat_url %>
<br>
<%= link_to "All cats", cats_url %>