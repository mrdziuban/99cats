<h2>Rental request form for <%= @cat.name %>!</h2>

<h3><%= "ERROR: #{params[:error]}" if !!params[:error] %></h3>

<form action="<%= "/cat_rental_requests" %>" method="post">
  <label for="begin_date">Begin date: </label>
  <input name="cat_rental_request[begin_date]"
    id="cat_rental_request_begin_date" type="date"></input>
  <br>

  <label for="end_date">End date: </label>
  <input name="cat_rental_request[end_date]"
    id="cat_rental_request_end_date" type="date"></input>
  <br>

  <input type="hidden" name="cat_rental_request[cat_id]" value="<%= @cat.id %>">
  <input type="hidden"
         name="authenticity_token"
         value="<%= form_authenticity_token %>">
  <input type="submit" value="Send my request">
</form>